<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="shivam.happeningapp3.ShowAbout"
    android:background="#ffe6ff88">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:width="300dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail of Prof"
        android:id="@+id/detaishow"
        android:layout_below="@+id/input"
        android:layout_alignStart="@+id/input"
        android:layout_marginTop="43dp"
        android:onClick="detailshowm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="list of profs"
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/detaishow"
        android:layout_alignEnd="@+id/input"
        android:onClick="ListOfProf" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Details"
        android:id="@+id/showmedetail"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
